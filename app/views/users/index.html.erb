<%# encoding: utf-8 %>

<% title "Databáze hráčů" %>

<table class="tab0">

  <tr>
    <td>
      <a href="#" title="Home">⌂</a> »
      <%= link_to "Imperiální databáze hráčů", users_path %> »
      <a href="#">Profily</a>
    </td>

    <%= render :partial => 'layouts/filter_database' %>

  </tr>

</table>

<table class="tab2">
  <tr>
    <th class="l"><%= sortable 'nick', 'Jméno hráče' %></th>
    <th><%= sortable 'house_id', 'Národ'  %></th>
    <th>Pozemny utok</th>
    <th><%= sortable 'influence', 'Vliv' %></th>
    <th style="width:80px">Počet lén</th>
    <th class="r" style="width:75px">Akce</th>
  </tr>

  <% for user in @users do %>
      <tr>
        <td><%= link_to user.nick, user, :class => user.barvicky, :title => user.barvicky %></td>
        <td><%= link_to user.house.name, user.house %></td>
        <td><%= user.pozemni_utok %></td>
        <td><%= user.influence %></td>
        <td><%= user.fields.count %></td>
        <td>
          <%= link_to image_tag("css/post0.png"), new_message_url(:nick => user.nick ), :title => "Napsat hráči"%>
          <a href="#" alt="Útok"><img src="image/cssimage/zautocit.png" alt="Zautočit na hráče" title="Zautočit na hráče"></a>
          <%= link_to image_tag("css/adresat.png"), user_path(user), :alt => "Profil hráče", :title => "Profil hráče" %>

        </td>
      </tr>
  <% end %>
  <tr>
    <%= paginate @users %>
  </tr>

</table>

