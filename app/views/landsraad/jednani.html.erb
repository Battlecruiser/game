      <td background="<%= asset_path 'imghra/emperor1.png' %>" rowspan="2" colspan="2" background-position="center center"></td>
    <% else %>
      <td background="<%= asset_path 'imghra/regent1.png' %>" rowspan="2" colspan="2" background-position="center"></td>
