<tr>
  <td><%= link_to user.nick, user, :class => user.barvicky, :title => user.barvicky  %></td>
  <td><%= link_to user.subhouse.name, user.subhouse if user.subhouse %></td>
  <td>5%*</td>
  <td>11111*</td>
  <td>11111*</td>
  <td><%= user.influence %></td>
  <td><%= user.fields.count %></td>
  <td class="left_align">
    <%= link_to img_posta, new_message_path(:nick => user.nick), :title => "Napsat hráči"%>

    <%= link_to img_utok,  nil, :title => "Zautočit na hráče" unless user.house == current_user.house %>

    <%= link_to img_trash("Vyhostit hráče"), vyhosteni_hrace_path(:user_id => user.id), :confirm => "Jste si jist ?", :title => "Vyhostit hráče" if user.house.id != House.renegat.id && current_user.house == user.house  %>

