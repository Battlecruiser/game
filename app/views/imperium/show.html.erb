        <% if @spravce %>
        <b>Místodržící Arrakisu: </b> <%= link_to @spravce.nick, @spravce if @spravce %>
        <% else %>
        <li><h3>Produkce Arrakisu není kontrolována!</h3>
        <% end %>
      <li>
        <b>Známých planet: </b> <%= Planet.count %>
