<!--- volba imperátora -->

<% if Imperium.volba_imperatora? %>

  <div class="la" style="background-image: url(/assets/imghra/vobyimperatora.png) !important"> 
      <%= link_to "Probíhaji volby Imperátora!", volba_imperatora_path %>
  </div>
<% end %>

<!--- POŠTA -->

<div class="la">
  <%= link_to "Nepřečtená pošta [" + current_user.neprocteno_sprav.to_s + "]", messages_path %>
</div>

<!--- UDÁLOST LÉNA -->

<% field, planet = current_user.zobraz_udalost %>
<% field.each do |f| %>
    <div class="la field_event" style="background-image: url(/assets/imghra/udalost.png) !important">
      
      <!--- CHTĚLO BY TO ZNĚNÍ:
      
      Objevila se událost "xxx" na vašem léně "xxx". --->
      
      <%= f[0] %>
      
      <%= link_to "Více..", udalosti_path(:id => f[1], :typ => "L") %>
    </div>
<% end %>
<% planet.each do |p| %>
    <div class="la field_event">
      <%= p[0] %>
      <%= link_to "udalosti", udalosti_path(:id => p[1], :typ => "P") %>
    </div>
<% end %>



<%= render 'layouts/narodni_nastenka' %>
